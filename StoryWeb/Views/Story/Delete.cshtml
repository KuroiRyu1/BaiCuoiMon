@{
    ViewBag.Title = "Xóa truyện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="fashion_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow p-4 mb-5 bg-white rounded">
                    <h3 class="text-center mb-4">Xác nhận xóa truyện</h3>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["Error"]</div>
                    }
                    <p>Bạn có chắc muốn xóa truyện với ID: @ViewBag.Id?</p>
                    <form method="post" action="@Url.Action("Delete", "Story", new { id = ViewBag.Id })">
                        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                        <a href="@Url.Action("Index", "Story")" class="btn btn-secondary">Hủy</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var url = new URL(window.location.href);
        var id = url.searchParams.get("id");
        if (id) {
            $("form").attr("action", "@Url.Action("Delete", "Story")?id=" + id);
        }
    });
</script>