@{
    ViewBag.Title = "Index";
    List<StoryWeb.Models.ModelView.Story> storyList = (List<StoryWeb.Models.ModelView.Story>)ViewBag.stories;
}

<h2>Story List</h2>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Author</th>
        <th>Category</th>
        <th>Chapters</th>
        <th>Likes</th>
        <th>Follows</th>
        <th>Views</th>
    </tr>
    @foreach (StoryWeb.Models.ModelView.Story item in storyList)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.AuthorName</td>
            <td>@item.CategoryName</td>
            <td>@item.ChapterNumber</td>
            <td>@item.LikeNumber</td>
            <td>@item.FollowNumber</td>
            <td>@item.ViewNumber</td>
        </tr>
    }
</table>
<a href="@Url.Action("Create", "Story")" class="btn btn-primary">Add New Story</a>