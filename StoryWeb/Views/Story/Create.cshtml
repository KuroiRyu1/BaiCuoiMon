@model StoryWeb.Models.ModelView.Story
@{
    ViewBag.Title = "Thêm truyện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="fashion_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow p-4 mb-5 bg-white rounded">
                    <h3 class="text-center mb-4">Thêm truyện mới</h3>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }
                    @using (Html.BeginForm("CreateConfirm", "Story", FormMethod.Post))
                    {
                        <div class="form-group mb-3">
                            <label>Tiêu đề:</label>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>Giới thiệu:</label>
                            @Html.TextAreaFor(m => m.Introduction, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Introduction, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>Ảnh:</label>
                            @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "text" })
                            @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>Số chương:</label>
                            @Html.TextBoxFor(m => m.ChapterNumber, new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.ChapterNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>ID Tác giả:</label>
                            @Html.TextBoxFor(m => m.AuthorId, new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.AuthorId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>ID Trạng thái:</label>
                            @Html.TextBoxFor(m => m.StatusId, new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.StatusId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>ID Danh mục:</label>
                            @Html.TextBoxFor(m => m.CategoryId, new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label>ID Loại truyện:</label>
                            @Html.TextBoxFor(m => m.StoryTypeId, new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.StoryTypeId, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-success w-100">Thêm truyện</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>