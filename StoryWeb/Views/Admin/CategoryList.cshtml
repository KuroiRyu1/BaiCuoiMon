
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<StoryWeb.Models.ModelView.Category> cateList = new List<StoryWeb.Models.ModelView.Category>();
    if (ViewBag.cateLis!=null)
    {
        cateList = ViewBag.cateList;
    }
}

<h2>CategoryList</h2>

<div class="fashion_section">
    <div class="container">
        <h2 class="text-center mb-4">Quản lý người dùng</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cateList)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Active</td>
                        <td>
                            <a href="@Url.Action("Edit", "Story", new { id = item.Id })" class="btn btn-primary btn-sm">Sửa</a>
                            <a href="@Url.Action("Delete", "Story", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>