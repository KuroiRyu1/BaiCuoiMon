@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var userList = (List<StoryWeb.Models.ModelView.User>)ViewBag.user ?? new List<StoryWeb.Models.ModelView.User>();
}

<div class="fashion_section">
    <div class="container">
        <h2 class="text-center mb-4">Quản lý người dùng</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Tên đăng nhập</th>
                    <th>Tên</th>
                    <th>Vai trò</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in userList)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Username</td>
                        <td>@item.Role</td>
                        <td>@item.Email</td>
                        <td>@item.Active</td>
                        <td>
                            <a href="@Url.Action("ChangeUserRole", "Story", new { id = item.Id })" class="btn btn-primary btn-sm">Sửa</a>
                            <a href="@Url.Action("Delete", "Story", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>