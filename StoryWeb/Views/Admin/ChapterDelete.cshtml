@model StoryWeb.Models.ModelView.Chapter
@{
    ViewBag.Title = "Xóa chương";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">Xác nhận xóa chương</h2>
    <a href="@Url.Action("StoryDetail", "Admin", new { id = Model.StoryId })" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow mb-4">
        <div class="card-body">
            <p>Bạn có chắc muốn xóa chương "<strong>@Model.Title</strong>"?</p>
            <form method="post" action="@Url.Action("ChapterDelete", "Admin", new { storyId = Model.StoryId, chapterId = Model.Id })">
                <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                <a href="@Url.Action("StoryDetail", "Admin", new { id = Model.StoryId })" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>